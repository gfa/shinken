	  debian/tmp/usr/lib/python2.6/dist-packages/shinken/webui/plugins/dashboard/htdocs/css/dashboard.css \
	  debian/tmp/usr/lib/python2.6/dist-packages/shinken/webui/plugins/dashboard/htdocs/css/fullscreen-widget.css \
	  debian/tmp/usr/lib/python2.6/dist-packages/shinken/webui/plugins/dashboard/htdocs/css/fullscreen.css \
	  debian/tmp/usr/lib/python2.6/dist-packages/shinken/webui/plugins/dashboard/htdocs/css/shinken-currently.css \
	  debian/tmp/usr/lib/python2.6/dist-packages/shinken/webui/plugins/dashboard/htdocs/css/widget.css \
	  debian/tmp/usr/lib/python2.6/dist-packages/shinken/webui/plugins/dashboard/htdocs/js/jquery.jclock.js \
