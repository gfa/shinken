#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# This has to be exported to make some magic below work.
export DH_OPTIONS

%:
	dh $@ --with python2

clean:
	dh clean --with python2,quilt
	# dh_clean does not support removing dirs
	rm -rf build Shinken.egg-info
	# Remove manpage build
	make -C doc/manpages/markdown/ clean

build:
	dh_testdir
	dh_auto_configure
	python setup.py build \
	  --build-base debian/tmp/ \
	  --build-purelib debian/tmp/usr/lib/python2.6/dist-packages/ 
	dh_auto_test
	# Build manpages
	make -C doc/manpages/markdown
	
	# remove useless files
	rm -f shinken/webui/htdocs/images/icons/.DS_Store
	

binary: 
	dh_testroot
	dh_prep
	dh_installdirs
	
	python setup.py install \
	  --no-compile \
	  --install-layout=deb \
	  --install-purelib /usr/lib/python2.6/dist-packages/ \
	  --root $(CURDIR)/debian/tmp
	
	# Fix perms
	chmod 644 \
	  debian/tmp/usr/lib/python2.6/dist-packages/shinken/webui/htdocs/css/bootstrap.css \
	  debian/tmp/usr/lib/python2.6/dist-packages/shinken/webui/htdocs/css/bootstrap.min.css \
	  debian/tmp/usr/lib/python2.6/dist-packages/shinken/webui/htdocs/css/custom/badger.css \
	  debian/tmp/usr/lib/python2.6/dist-packages/shinken/webui/htdocs/css/custom/layout.css \
	  debian/tmp/usr/lib/python2.6/dist-packages/shinken/webui/htdocs/css/docs.css \
	  debian/tmp/usr/lib/python2.6/dist-packages/shinken/webui/htdocs/css/elements/jquery.meow.css \
	  debian/tmp/usr/lib/python2.6/dist-packages/shinken/webui/htdocs/css/font-awesome-ie7.css \
	  debian/tmp/usr/lib/python2.6/dist-packages/shinken/webui/htdocs/css/font-awesome.css \
	  debian/tmp/usr/lib/python2.6/dist-packages/shinken/webui/htdocs/font/fontawesome-webfont.eot \
	  debian/tmp/usr/lib/python2.6/dist-packages/shinken/webui/htdocs/font/fontawesome-webfont.svg \
	  debian/tmp/usr/lib/python2.6/dist-packages/shinken/webui/htdocs/font/fontawesome-webfont.ttf \
	  debian/tmp/usr/lib/python2.6/dist-packages/shinken/webui/htdocs/font/fontawesome-webfont.woff \
	  debian/tmp/usr/lib/python2.6/dist-packages/shinken/webui/htdocs/ico/bootstrap-apple-114x114.png \
