	  debian/tmp/usr/lib/python2.6/dist-packages/shinken/webui/htdocs/img/icons/icon-plus-dash.png \
	  debian/tmp/usr/lib/python2.6/dist-packages/shinken/webui/htdocs/img/icons/icon-settings.png \
	  debian/tmp/usr/lib/python2.6/dist-packages/shinken/webui/htdocs/img/icons/star.png \
	  debian/tmp/usr/lib/python2.6/dist-packages/shinken/webui/htdocs/img/icons/state_ack.png \
	  debian/tmp/usr/lib/python2.6/dist-packages/shinken/webui/htdocs/img/icons/state_critical.png \
	  debian/tmp/usr/lib/python2.6/dist-packages/shinken/webui/htdocs/img/icons/state_down.png \
	  debian/tmp/usr/lib/python2.6/dist-packages/shinken/webui/htdocs/img/icons/state_flapping.png \
	  debian/tmp/usr/lib/python2.6/dist-packages/shinken/webui/htdocs/img/icons/state_ok.png \
