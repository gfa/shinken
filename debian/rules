	  debian/tmp/usr/lib/python2.6/dist-packages/shinken/webui/htdocs/img/icons/state_up.png \
	  debian/tmp/usr/lib/python2.6/dist-packages/shinken/webui/htdocs/img/icons/state_warning.png \
	  debian/tmp/usr/lib/python2.6/dist-packages/shinken/webui/htdocs/img/logo.png \
	  debian/tmp/usr/lib/python2.6/dist-packages/shinken/webui/htdocs/img/nyan-cat.gif \
	  debian/tmp/usr/lib/python2.6/dist-packages/shinken/webui/htdocs/js/README.md \
	  debian/tmp/usr/lib/python2.6/dist-packages/shinken/webui/htdocs/js/application.js \
	  debian/tmp/usr/lib/python2.6/dist-packages/shinken/webui/htdocs/js/bootstrap-alert.js \
	  debian/tmp/usr/lib/python2.6/dist-packages/shinken/webui/htdocs/js/bootstrap-carousel.js \
	  debian/tmp/usr/lib/python2.6/dist-packages/shinken/webui/htdocs/js/bootstrap-scrollspy.js \
	  debian/tmp/usr/lib/python2.6/dist-packages/shinken/webui/htdocs/js/bootstrap-typeahead.js \
	  debian/tmp/usr/lib/python2.6/dist-packages/shinken/webui/htdocs/js/bootstrap.js \
	  debian/tmp/usr/lib/python2.6/dist-packages/shinken/webui/htdocs/js/bootstrap.min.js \
	  debian/tmp/usr/lib/python2.6/dist-packages/shinken/webui/htdocs/js/google-code-prettify/prettify.css \
